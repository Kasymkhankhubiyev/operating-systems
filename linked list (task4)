#include <stdio.h>
#include <string.h>
#include <stdlib.h>

#define STRING_MAX_SIZE 255

typedef struct List { //создаем структура типа лист, который будет хранить ссыки на новую строку и предыдущий лист
    char *string;
    struct List *next;
} List;

List *init_List() { //инициализируем лист
    List *list = (List *) malloc(sizeof(List)); //выделяем память под структуру, должны будем сами очищать
    if (list) { //пустой лист.
        list->string = NULL;
        list->next = NULL;
    }
    return list;
}

void pop(List *list) { //очистка листа
    List *current_list = list;
    while (current_list) {
        if (current_list->string) { //очищаем строку
            free(current_list->string);
        }
        List *to_delete = current_list; 
        current_list = current_list->next;
        free(to_delete);
    }
}

void print_strings(List *list) {
    List *current_list = list;
    while (current_list) { //по очереди выводим строки
        printf("%s\n", current_list->string);
        current_list = current_list->next;
    }
}

void push(List **list, char *string) {
    if (!*list) { //если нет, то его нужно создать
        *list = init_List();
        if (!*list) { //не смог создаться
            perror("List didn't init\n");
            exit(-1);
        }
        (*list)->string = string;
    } else {
        List *last_list = *list; //
        while (last_list->next) {
            last_list = last_list->next;
        }
        List *new_list = init_List();
        new_list->string = string;
        last_list->next = new_list;
        if (!new_list) {
            perror("List can't add more string\n");
            print_strings(*list);
            pop(*list);
            exit(-1);
        }
    }
}

int main() {
    char string[STRING_MAX_SIZE];
    List *list = NULL;
    printf("Enter your strings. String ends with \".\" :\n");
    if (fgets(string, STRING_MAX_SIZE, stdin) != NULL) { //безопасное считывание полной строки до первого перехода \n
        while (*(fgets(string, STRING_MAX_SIZE, stdin)) != '.') { //пока нет точки или длина удовлетворительна
            size_t string_lenght = strlen(string); //получаем длину строки !strlen не учитывает нулевого символа на конце!
            char *tmp = (char *) malloc(string_lenght); //выделяем память под длину строки
            if (tmp) {
                memcpy(tmp, string, string_lenght); //копирование одной области памяти в другую с указанием длины
                if (tmp[string_lenght - 1] == '\n') { //добавляем нулевой символ
                    tmp[string_lenght - 1] = '\0';
                }
                push(&list, tmp); //добавляем строку с учетом сущесвующего списка
            }
        }
        print_strings(list); //выводим список
        pop(list); очищаем
    }
    else {
        perror("fgets return NULL\n");
        exit(-1);
    }
    return 0;
}
